<h1>Bucket Lists</h1>
	<% @posts.each do |post| %>
<!-- these go in the cards themselves -->
		<h3><%= post.title %></h3>
		<h4><%= post.author %></h4>
<!-- not sure if we end the card thing here -->
	<%= link_to 'Show Posts', post_path(post) %>
	<% if user_signed_in? %>
		<%= link_to 'Edit Post', edit_post_path(post) %>
		<%= link_to 'Delete Post', post_path(post), method: :delete, data: {confirm: "Do you really want to delete this Post?"} %>
	<% end %>
<!-- or here -->
<% end %>
<%= link_to 'New User', new_user_path, %>
		